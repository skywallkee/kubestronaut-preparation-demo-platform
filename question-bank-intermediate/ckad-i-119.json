  "solution": {
    "steps": [
      "1. kubectl run nginx --image=nginx --restart=Never --env=var1=val1",
      "2. kubectl exec -it nginx -- env",
      "3. kubectl exec -it nginx -- sh -c 'echo $var1'",
      "4. kubectl describe po nginx | grep val1",
      "5. kubectl run nginx --restart=Never --image=nginx --env=var1=val1 -it --rm -- env",
      "6. kubectl run nginx --image nginx --restart=Never --env=var1=val1 -it --rm -- sh -c 'echo $var1'"
    ]
  },
