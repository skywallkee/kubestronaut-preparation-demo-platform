      "1. echo -e \"var3=val3\\nvar4=val4\" > config4.txt",
      "2. kubectl create cm configmap4 --from-file=special=config4.txt",
      "3. kubectl describe cm configmap4",
      "4. kubectl get cm configmap4 -o yaml"
