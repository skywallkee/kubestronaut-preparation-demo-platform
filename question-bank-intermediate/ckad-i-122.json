  "solution": {
    "steps": [
      "1. kubectl run nginx1 --image=nginx --restart=Never --labels=app=v1",
      "2. kubectl run nginx2 --image=nginx --restart=Never --labels=app=v1",
      "3. kubectl run nginx3 --image=nginx --restart=Never --labels=app=v1",
      "4. for i in `seq 1 3`; do kubectl run nginx$i --image=nginx -l app=v1 ; done"
    ]
  },
