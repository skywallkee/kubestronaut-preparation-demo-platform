    "prerequisites": []
  },
  "solution": {
    "steps": [
      "1. kubectl create configmap anotherone --from-literal=var6=val6 --from-literal=var7=val7",
      "2. kubectl run --restart=Never nginx --image=nginx -o yaml --dry-run=client > pod.yaml",
      "3. vi pod.yaml",
      "4. kubectl create -f pod.yaml",
      "5. kubectl exec -it nginx -- env"
    ]
  },
