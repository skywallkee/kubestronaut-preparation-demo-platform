  "solution": {
    "steps": [
      "1. :~$ kubectl create secret generic mysecret --from-file=.dockerconfigjson=${XDG_RUNTIME_DIR}/containers/auth.json --type=kubernetes.io/dockeconfigjson",
      "2. secret/mysecret created",
      "3. :~$ kubectl create secret docker-registry mysecret2 --docker-server=https://index.docker.io/v1/ --docker-username=$YOUR_USR --docker-password=$YOUR_PWD",
      "4. secret/mysecret2 created"
    ]
