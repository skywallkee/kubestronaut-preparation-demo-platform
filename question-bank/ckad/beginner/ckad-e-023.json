{
  "id": "ckad-e-023",
  "title": "Execute Command in Pod",
  "description": "Execute the command ||'whoami'|| in the ||env-pod|| container and save the output to ||/opt/course/023/whoami.txt||.",
  "points": 3,
  "timeLimit": 6,
  "category": "Application Observability and Maintenance",
  "tags": [
    "debugging-troubleshooting",
    "basic"
  ],
  "infrastructure": {
    "namespaces": [
      "neptune"
    ],
    "resources": [
      "pods"
    ],
    "prerequisites": [
      "env-pod exists"
    ]
  },
  "solution": {
    "steps": [
      "1. Execute command in pod:",
      "   kubectl exec env-pod -- whoami",
      "2. Save output to file:",
      "   kubectl exec env-pod -- whoami > /opt/course/023/whoami.txt",
      "3. Verify output:",
      "   cat /opt/course/023/whoami.txt"
    ]
  },
  "validations": [
    {
      "command": "test -f /opt/course/023/whoami.txt",
      "expected": "0",
      "points": 3,
      "description": "Output file should exist"
    }
  ]
}