{
  "id": "ckad-e-056",
  "title": "Create Pod with Container Image from Private Registry",
  "description": "Create a Pod named ||private-pod|| in Namespace ||default|| using image ||myregistry.com/myapp:v1.0|| with image pull policy set to ||Always||.",
  "points": 3,
  "timeLimit": 8,
  "category": "Application Design and Build",
  "tags": [
    "container-images",
    "basic"
  ],
  "infrastructure": {
    "namespaces": [
      "default"
    ],
    "resources": [
      "pods"
    ],
    "prerequisites": []
  },
  "solution": {
    "steps": [
      "1. Create Pod YAML:",
      "   kubectl run private-pod --image=myregistry.com/myapp:v1.0 --dry-run=client -o yaml > private-pod.yaml",
      "2. Edit YAML to set imagePullPolicy: Always",
      "3. Apply the Pod:",
      "   kubectl apply -f private-pod.yaml"
    ]
  },
  "validations": [
    {
      "command": "kubectl get pod private-pod -o jsonpath='{.spec.containers[0].image}'",
      "expected": "myregistry.com/myapp:v1.0",
      "points": 2,
      "description": "Pod should use correct private registry image"
    },
    {
      "command": "kubectl get pod private-pod -o jsonpath='{.spec.containers[0].imagePullPolicy}'",
      "expected": "Always",
      "points": 1,
      "description": "Pod should have imagePullPolicy set to Always"
    }
  ]
}