{
  "id": "ckad-e-022",
  "title": "Describe a Pod",
  "description": "Get detailed information about the ||multi-pod|| in the ||uranus|| namespace and save the output to ||/opt/course/022/pod-describe.txt||.",
  "points": 2,
  "timeLimit": 5,
  "category": "Application Observability and Maintenance",
  "tags": [
    "debugging-troubleshooting",
    "basic"
  ],
  "infrastructure": {
    "namespaces": [
      "uranus"
    ],
    "resources": [
      "pods"
    ],
    "prerequisites": [
      "multi-pod exists"
    ]
  },
  "solution": {
    "steps": [
      "1. Describe pod:",
      "   kubectl describe pod multi-pod -n uranus",
      "2. Save output to file:",
      "   kubectl describe pod multi-pod -n uranus > /opt/course/022/pod-describe.txt",
      "3. Verify file:",
      "   head /opt/course/022/pod-describe.txt"
    ]
  },
  "validations": [
    {
      "command": "test -f /opt/course/022/pod-describe.txt",
      "expected": "0",
      "points": 2,
      "description": "Describe file should exist"
    }
  ]
}