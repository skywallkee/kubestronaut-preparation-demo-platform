{
  "id": "ckad-e-040",
  "title": "Create Pod with TTL",
  "description": "Create a Pod named ||ttl-pod|| using image ||busybox:1.31.0|| with ||activeDeadlineSeconds|| set to ||60|| and command ||'sleep 3600'|| in the ||saturn|| namespace.",
  "points": 4,
  "timeLimit": 10,
  "category": "Application Design and Build",
  "tags": [
    "multi-container-pods",
    "basic"
  ],
  "infrastructure": {
    "namespaces": [
      "saturn"
    ],
    "resources": [
      "pods"
    ],
    "prerequisites": []
  },
  "solution": {
    "steps": [
      "1. Create pod yaml:",
      "   kubectl run ttl-pod --image=busybox:1.31.0 --dry-run=client -o yaml > ttl-pod.yaml",
      "2. Add activeDeadlineSeconds:",
      "   activeDeadlineSeconds: 60",
      "3. Add command:",
      "   command: ['sleep', '3600']",
      "4. Apply pod:",
      "   kubectl apply -f ttl-pod.yaml -n saturn"
    ]
  },
  "validations": [
    {
      "command": "kubectl get pod ttl-pod -n saturn -o jsonpath='{.spec.activeDeadlineSeconds}'",
      "expected": "60",
      "points": 4,
      "description": "Pod should have 60 second deadline"
    }
  ]
}