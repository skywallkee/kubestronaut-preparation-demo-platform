{
  "id": "ckad-e-006",
  "title": "Create a Pod with ReadinessProbe",
  "description": "Create a Pod named ||probe-pod|| using image ||nginx:1.20-alpine|| with a readiness probe that checks HTTP GET on port ||80|| and path ||'/'|| in the ||uranus|| namespace.",
  "points": 5,
  "timeLimit": 12,
  "category": "Application Observability and Maintenance",
  "tags": [
    "health-probes",
    "basic"
  ],
  "infrastructure": {
    "namespaces": [
      "uranus"
    ],
    "resources": [
      "pods"
    ],
    "prerequisites": []
  },
  "solution": {
    "steps": [
      "1. Create pod yaml:",
      "   kubectl run probe-pod --image=nginx:1.20-alpine --dry-run=client -o yaml > probe-pod.yaml",
      "2. Add readinessProbe section:",
      "   readinessProbe:",
      "     httpGet:",
      "       path: /",
      "       port: 80",
      "     initialDelaySeconds: 5",
      "     periodSeconds: 5",
      "3. Apply pod:",
      "   kubectl apply -f probe-pod.yaml -n uranus"
    ]
  },
  "validations": [
    {
      "command": "kubectl get pod probe-pod -n uranus -o jsonpath='{.status.phase}'",
      "expected": "Running",
      "points": 2,
      "description": "Pod should be running"
    },
    {
      "command": "kubectl get pod probe-pod -n uranus -o jsonpath='{.status.containerStatuses[0].ready}'",
      "expected": "true",
      "points": 1.5,
      "description": "Pod should be ready (readiness probe passing)"
    },
    {
      "command": "kubectl get pod probe-pod -n uranus -o jsonpath='{.spec.containers[0].image}'",
      "expected": "nginx:1.20-alpine",
      "points": 0.5,
      "description": "Pod should use correct image"
    },
    {
      "command": "kubectl get pod probe-pod -n uranus -o jsonpath='{.spec.containers[0].readinessProbe.httpGet.path}'",
      "expected": "/",
      "points": 0.5,
      "description": "ReadinessProbe should check path '/'"
    },
    {
      "command": "kubectl get pod probe-pod -n uranus -o jsonpath='{.spec.containers[0].readinessProbe.httpGet.port}'",
      "expected": "80",
      "points": 0.5,
      "description": "ReadinessProbe should check port 80"
    }
  ]
}