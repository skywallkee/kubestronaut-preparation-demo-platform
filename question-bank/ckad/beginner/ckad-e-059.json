{
  "id": "ckad-e-059",
  "title": "Create Pod with Liveness Probe",
  "description": "Create a Pod named ||health-pod|| in Namespace ||default|| using image ||nginx:1.21|| with an HTTP liveness probe on port ||80|| and path ||/||.",
  "points": 3,
  "timeLimit": 8,
  "category": "Application Observability and Maintenance",
  "tags": [
    "probes-health",
    "basic"
  ],
  "infrastructure": {
    "namespaces": [
      "default"
    ],
    "resources": [
      "pods"
    ],
    "prerequisites": []
  },
  "solution": {
    "steps": [
      "1. Create Pod YAML:",
      "   kubectl run health-pod --image=nginx:1.21 --dry-run=client -o yaml > health-pod.yaml",
      "2. Edit YAML to add livenessProbe with httpGet on port 80, path /",
      "3. Apply the Pod:",
      "   kubectl apply -f health-pod.yaml"
    ]
  },
  "validations": [
    {
      "command": "kubectl get pod health-pod -o jsonpath='{.spec.containers[0].livenessProbe.httpGet.port}'",
      "expected": "80",
      "points": 1.5,
      "description": "Pod should have liveness probe on port 80"
    },
    {
      "command": "kubectl get pod health-pod -o jsonpath='{.spec.containers[0].livenessProbe.httpGet.path}'",
      "expected": "/",
      "points": 1.5,
      "description": "Pod should have liveness probe on path /"
    }
  ]
}